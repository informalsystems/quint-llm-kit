{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Requirement Analysis",
  "description": "Structured analysis of change requirements for Quint specs",
  "type": "object",
  "required": ["objective", "scope", "key_concepts", "affected_areas", "risks"],
  "properties": {
    "objective": {
      "type": "string",
      "description": "High-level goal of the change request"
    },
    "scope": {
      "type": "object",
      "required": ["modules", "boundaries"],
      "properties": {
        "modules": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of affected module names"
        },
        "boundaries": {
          "type": "string",
          "description": "What is explicitly in/out of scope"
        }
      }
    },
    "key_concepts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["term", "definition"],
        "properties": {
          "term": {"type": "string"},
          "definition": {"type": "string"},
          "quint_equivalent": {"type": "string"}
        }
      },
      "description": "Domain concepts and their Quint representations"
    },
    "affected_areas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["module", "component", "change_type"],
        "properties": {
          "module": {"type": "string"},
          "component": {"type": "string"},
          "change_type": {
            "type": "string",
            "enum": ["add", "modify", "remove"]
          },
          "rationale": {"type": "string"}
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "severity"],
        "properties": {
          "description": {"type": "string"},
          "severity": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "mitigation": {"type": "string"}
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "knowledge_references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["doc", "example", "pattern", "builtin"]
          },
          "identifier": {"type": "string"},
          "relevance": {"type": "string"}
        }
      }
    }
  }
}
